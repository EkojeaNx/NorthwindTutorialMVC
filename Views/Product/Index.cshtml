@using NorthwindTutorialMVC.Models
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Products>
@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="float:right;margin-bottom:15px;margin-right:15px;">
    <a href="/Product/New/" class="btn btn-info">NEW Product</a>
</div>
<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Unit Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.Categories.CategoryName</td>
                <td>@item.UnitPrice</td>
                <td>@item.UnitsInStock</td>
                <td>
                    <a href="/Product/Update/@item.ProductID" class="btn btn-info">Update</a>
                    <a href="/Product/Delete/@item.ProductID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))